<UserControl x:Class="ZdravoKorporacija.Pages.DemoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoKorporacija.Pages"
             mc:Ignorable="d" Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="700">
    <Grid>
        <Grid Height="280" Width="680">
            <Border CornerRadius="20">
                <Border.Background>
                    <SolidColorBrush Opacity="0.5" Color="LightBlue"/>
                </Border.Background>

                <TextBlock x:Name="Textic" HorizontalAlignment="Center" Width="400" VerticalAlignment="Center"
                           FontSize="22" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding}" FontWeight="SemiBold" />
            </Border>
        </Grid> 
    </Grid>
</UserControl>
